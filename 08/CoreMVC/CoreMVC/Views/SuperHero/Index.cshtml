@model IEnumerable<CoreMVC.Models.SuperHero>

@{
	ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
 <a asp-action="Add">Add New Super Hero</a>
</p>
<table class="table">
 <thead>
  <tr>
   <th>
				@Html.DisplayNameFor(model => model.id)
   </th>
   <th>
				@Html.DisplayNameFor(model => model.name)
   </th>
   <th>
				@Html.DisplayNameFor(model => model.alias)
   </th>
   <th>
				@Html.DisplayNameFor(model => model.hideOuts)
   </th>
   <th>
				@Html.DisplayNameFor(model => model.superPowers)
   </th>

   <th></th>
  </tr>
 </thead>
 <tbody>
		@foreach (var item in Model)
		{
	  <tr>
	   <td>
					@Html.DisplayFor(modelItem => item.id)
	   </td>
	   <td>
					@Html.DisplayFor(modelItem => item.name)
	   </td>
	   <td>
					@Html.DisplayFor(modelItem => item.alias)
	   </td>
	   <td>
					@Html.DisplayFor(modelItem => item.hideOuts)
	   </td>
	   <td>
			@if (item.superPowers.Count>0)
			{
			<ul>
					@foreach (var sp in item.superPowers)
					{
					    <li>@sp.Name</li>
					}
			</ul>
			<a asp-action="AddSuperPower" asp-controller="SuperPower" asp-route-id=@item.id>Add more super power</a>
			}
			@if(item.superPowers.Count == 0){
				<a asp-action="AddSuperPower" asp-controller="SuperPower" asp-route-id=@item.id>Add super power</a>
				}
		</td>
	   <td>
					@*@Html.ActionLink("Edit", "Update", new {  id=item.id }) *@
					<a asp-action="Update" asp-route-id=@item.id>Edit</a>|
					@Html.ActionLink("Details", "Details", new {  id=item.id  }) |
					@Html.ActionLink("Delete", "Delete", new {  id=item.id })
	   </td>
	  </tr>
		}
 </tbody>
</table>
